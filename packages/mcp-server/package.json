{
  "name": "@rustledger/mcp-server",
  "version": "0.5.0",
  "description": "MCP server for rustledger - validate, query, and format Beancount ledgers",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rustledger-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/docs dist/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "beancount",
    "accounting",
    "ledger",
    "finance",
    "rustledger"
  ],
  "author": "Rustledger Contributors",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rustledger/rustledger"
  },
  "homepage": "https://rustledger.github.io",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@rustledger/wasm": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
